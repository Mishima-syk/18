{
    "name": "${localWorkspaceFolderBasename}",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/usr/bin/zsh",
                "args": [
                    "-l"
                ]
            }
        },
    },
    "extensions": [
        "matklad.rust-analyzer",
        "vadimcn.vscode-lldb",
    ],
}
